<!DOCTYPE html>
<html lang="{{language}}">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{{ translations.processing_video }}</title>

    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/css/normalize.css" />
    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <script>const translations = `{{{json translations}}}`;</script> 
    <script src="/success.js" defer></script>
    <style>
      .progress-bar {
        background-color: #e0e0e0;
        border-radius: 4px;
        height: 30px;
        width: 100%;
        position: relative;
        overflow: hidden;
      }
      .progress-fill {
        background-color: #4CAF50;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: width 0.3s ease;
        color: white;
        font-weight: bold;
      }
      .progress-status {
        margin-top: 8px;
        text-align: center;
        font-size: 14px;
      }
    </style>
  </head>

  <body>
    {{> header translations=translations}}
    <div class="sr-root">
      <div class="sr-main">
        <section class="container">
          <h1>{{ translations.processing_your_video }}</h1>
          <div id="status-message" class="processing">{{ translations.retrieving_upload }}</div>
          
          <div id="progress-container" class="progress-container">
            <div class="progress-bar" style="position: relative;">
              <div id="progress-fill" class="progress-fill" style="width: 0%;"></div>
              <span id="progress-text" style="position: absolute; top: 0; left: 50%;">0%</span>
            </div>
            <div id="progress-status" class="progress-status">{{ translations.initializing }}</div>
          </div>
          
          <div id="completion-section" class="hidden">            
            <div id="video-result">
              <video id="video-result-element" width="640" height="360" controls>
                <source id="video-source" src="" type="video/mp4">
                Your browser does not support the video tag.
              </video>
              <p>
                <a id="download-link" href="#" download="video.mp4">{{ translations.download_video }}</a>
              </p>
            </div>

            <div id="action-buttons">
              <button id="another-video-button">{{ translations.generate_another_video }}</button>
              <button id="change-face-button">{{ translations.change_the_face }}</button>
            </div>
          </div>

          <div id="error-message" class="hidden error-text"></div>
          
          <div id="debug-log" class="hidden">
            <h3>Debug Log:</h3>
            <pre id="debug-output"></pre>
          </div>
        </section>
      </div>
    </div>
    {{> footer translations=translations}}
  </body>
</html>
