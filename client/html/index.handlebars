<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/img/logo.ico" type="image/x-icon">
    <title>{{ translations.title }}</title>

    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/css/normalize.css" />
    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://js.stripe.com/v3/"></script>
    <script>const translations = `{{{json translations}}}`;</script> 
    <script src="/index.js" defer></script>
  </head>

  <body>
    {{> header translations=translations}}
    <!-- Free badge for image mode -->
    <div id="freeModeBadgeTop" class="alert alert-success w-100 rounded-0" style="text-align: center;">
      <strong>{{#if translations.free_mode}}{{ translations.free_mode }}{{else}}Free!{{/if}}</strong> {{#if translations.free_mode_description}}{{ translations.free_mode_description }}{{else}}Image to image face swap is 100% free{{/if}}
    </div>
    <div class="container mx-auto mt-5 bg-white text-dark">
      <div class="main" style="width: 100%;">
        <section id="top" class="main-container">
            <div style="display: flex; flex-direction: column;align-items: center;justify-content: center;">
              <img src="/img/logo.png" alt="Logo" style="height: 50px; margin-right: 10px;">
              <div>
                <h1 id="title" >{{ translations.title }}</h1>
                <h4 id="subtitle" class="subtitle mb-0">{{ translations.subtitle }}</h4>
              </div>
            </div>

          <!-- Mode Selection Toggle -->
            <div class="mode-toggle-container" style="margin: 20px auto; text-align: center;">
            <div class="btn-group mode-toggle" role="group" aria-label="Choose mode">
              <button type="button" class="btn btn-primary active" id="videoModeBtn">{{#if translations.video_mode}}{{ translations.video_mode }}{{else}}Video Mode{{/if}}</button>
              <button type="button" class="btn btn-outline-primary position-relative" id="imageModeBtn">
              {{#if translations.image_mode}}{{ translations.image_mode }}{{else}}Image Mode{{/if}}
              <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success">
                {{#if translations.free_mode}}{{ translations.free_mode }}{{else}}Free!{{/if}}
                <span class="visually-hidden">Free!</span>
              </span>
              </button>
            </div>
            <p class="mt-2 text-muted">{{#if translations.mode_description}}{{ translations.mode_description }}{{else}}Choose between video or image face swap{{/if}}</p>
            </div>

          <div class="upload-container row mx-auto">
            <div id="videoSourceSection" class="upload-section bg-light border shadow-sm col-12 col-sm-5 mx-0">
              <h4 id="instruction_video" class="instruction">{{ translations.instruction_video }}</h4>
              <div id="videoDropZone" class="drop-zone">
                <input
                  type="file"
                  id="videoInput"
                  name="video_file"
                  accept="video/*"
                  style="display: none"
                />
                <button id="videoUploadBtn" class="upload-btn">
                  <span>{{ translations.upload_video }}</span>
                </button>
              </div>
              <p id="drop_video" class="drop-text">{{ translations.drop_video }}</p>
              <video id="videoPreview" width="100%" controls style="display: none;"></video>
              <div id="videoDetails" class="video-details bg-white"></div>
              
              <!-- Video Frames Gallery -->
              <div class="video-frames-section" style="display: none;">
                <h5 class="mt-3">{{#if translations.extracted_frames}}{{translations.extracted_frames}}{{else}}Extracted Frames:{{/if}}</h5>
                <p class="text-muted small">{{#if translations.click_frame_to_use}}{{translations.click_frame_to_use}}{{else}}Click on a frame to use for face swap{{/if}}</p>
                <div id="videoFramesGallery" class="video-frames-carousel"></div>
              </div>
              
              <style>
                .video-frames-section {
                  margin-top: 15px;
                  width: 100%;
                }
                
                .video-frames-carousel {
                  display: flex;
                  overflow-x: auto;
                  gap: 10px;
                  padding: 10px 0;
                  -webkit-overflow-scrolling: touch;
                  scrollbar-width: thin;
                }
                
                .video-frame {
                  flex: 0 0 auto;
                  cursor: pointer;
                  border: 2px solid transparent;
                  border-radius: 5px;
                  transition: border-color 0.3s;
                }
                
                .video-frame:hover {
                  border-color: #007bff;
                }
                
                .video-frame.selected {
                  border-color: #007bff;
                }
                
                .video-frame img {
                  width: 80px;
                  height: 80px;
                  object-fit: cover;
                  border-radius: 3px;
                }
              </style>
            </div>

            <!-- Image Source Section (Hidden by default) -->
            <div id="imageSourceSection" class="upload-section bg-light border shadow-sm col-12 col-sm-5 mx-0" style="display: none;">
              <h4 id="instruction_source_image" class="instruction">{{#if translations.instruction_source_image}}{{ translations.instruction_source_image }}{{else}}Upload source image{{/if}}</h4>
              <div id="sourceImageDropZone" class="drop-zone">
                <input
                  type="file"
                  id="sourceImageInput"
                  name="image_file"
                  accept="image/*"
                  style="display: none"
                />
                <button id="sourceImageUploadBtn" class="upload-btn">
                  <span>{{#if translations.upload_source_image}}{{ translations.upload_source_image }}{{else}}Upload Source Image{{/if}}</span>
                </button>
              </div>
              <p id="drop_source_image" class="drop-text">{{#if translations.drop_source_image}}{{ translations.drop_source_image }}{{else}}...or drop image here{{/if}}</p>
              <img id="sourceImagePreview" src="#" alt="Source image preview" style="max-width: 100%; height: auto; display: none;">
              <div id="sourceImageDetails" class="image-details bg-white"></div>
            </div>

            <div class="upload-section bg-light border shadow-sm col-12 col-sm-5 mx-0">
              <h4 id="instruction_image" class="instruction">{{ translations.instruction_image }}</h4>
              <div id="imageDropZone" class="drop-zone">
                <input
                  type="file"
                  id="imageInput"
                  name="face_image_file"
                  accept="image/*"
                  style="display: none"
                />
                <button id="imageUploadBtn" class="upload-btn">
                  <span>{{ translations.upload_photo }}</span>
                </button>
              </div>
              <p id="drop_photo" class="drop-text">{{ translations.drop_photo }}</p>
              <img id="imagePreview" src="#" alt="Image preview" style="max-width: 100%; height: auto; display: none;">
              <div id="imageDetails" class="image-details bg-white"></div>
              
              <!-- Sample Images Gallery -->
              <div class="sample-images-section">
                <h5 class="mt-3">{{#if translations.or_choose_sample}}{{translations.or_choose_sample}}{{else}}Or choose from samples:{{/if}}</h5>
                <div class="sample-images-carousel">
                    <div class="sample-image" data-img-src="/img/face-sample-1.png"><img src="/img/face-sample-1.png" alt="Sample 1"></div>
                    <div class="sample-image" data-img-src="/img/face-sample-2.png"><img src="/img/face-sample-2.png" alt="Sample 2"></div>
                    <div class="sample-image" data-img-src="/img/face-sample-3.png"><img src="/img/face-sample-3.png" alt="Sample 3"></div>
                    <div class="sample-image" data-img-src="/img/face-sample-4.png"><img src="/img/face-sample-4.png" alt="Sample 4"></div>
                    <div class="sample-image" data-img-src="/img/face-sample-5.png"><img src="/img/face-sample-5.png" alt="Sample 5"></div>
                    <div class="sample-image" data-img-src="/img/face-sample-6.png"><img src="/img/face-sample-6.png" alt="Sample 6"></div></div>
              </div>
              
              <style>
                .sample-images-section {
                  margin-top: 15px;
                  width: 100%;
                }
                
                .sample-images-carousel {
                  display: flex;
                  overflow-x: auto;
                  gap: 10px;
                  padding: 10px 0;
                  -webkit-overflow-scrolling: touch;
                  scrollbar-width: thin;
                }
                
                .sample-image {
                  flex: 0 0 auto;
                  cursor: pointer;
                  border: 2px solid transparent;
                  border-radius: 5px;
                  transition: border-color 0.3s;
                }
                
                .sample-image:hover {
                  border-color: #007bff;
                }
                
                .sample-image.selected {
                  border-color: #007bff;
                }
                
                .sample-image img {
                  width: 80px;
                  height: 80px;
                  object-fit: cover;
                  border-radius: 3px;
                }
                
                /* Mode toggle styling */
                .mode-toggle-container {
                  max-width: 400px;
                  margin: 20px auto 30px;
                }
                
                .mode-toggle .btn {
                  min-width: 120px;
                  font-weight: 500;
                }
              </style>
            </div>
          </div>

          <div class="payment-section"style="max-width: 80%; margin: 50px auto 0 auto;">
            <input type="checkbox" id="skipPayment" name="skipPayment" checked />
            <label for="skipPayment"><span>{{ translations.skip_payment }}</span></label>
            <button id="payButton" class="btn btn-primary rounded d-block proceed-btn shadow border border-white position-relative">
              <span>{{ translations.proceed }}</span>
              <span class="image-free-badge position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success border border-white" style="display: none;">
                {{#if translations.free_mode}}{{ translations.free_mode }}{{else}}Free!{{/if}}
                <span class="visually-hidden">Free!</span>
              </span>
            </button>
          </div>

          <script>
            if (window.location.hostname !== 'localhost') {
              document.getElementById('skipPayment').style.display = 'none';
              document.querySelector('label[for="skipPayment"]').style.display = 'none';
            }
          </script>

          <div id="status" class="status hidden"></div>
        </section>
     </div>
    </div>
    <!-- Image Modal -->
    <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
        <h5 class="modal-title" id="imageModalLabel">{{ translations.processed_image }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
        <img id="processedImage" src="" alt="Processed Image" style="width: 100%; max-height: 400px; object-fit: contain;">
        </div>
        <div class="modal-footer">
        <a id="downloadLink" href="#" class="btn btn-primary" download="processed_image.jpg">{{ translations.download }}</a>
        </div>
      </div>
      </div>
    </div>
    <div class="features">
        <!-- Hero Section -->
        <section id="hero" class="section py-5">
          <div class="container mx-auto">
            <div class="row align-items-center">
              <div class="col-md-6">
            <img src="/img/demo-swap1.webp" alt="{{ translations.hero.imageAlt }}" class="img-fluid">
              </div>
              <div class="col-md-6">
                <h2>{{ translations.hero.headline }}</h2>
                <p>{{ translations.hero.tagline }}</p>
                {{#if translations.hero.cta}}
                  <a href="#top" class="btn btn-primary btn-lg cta" style="padding: 12px 30px; font-size: 1.2em; border-radius: 30px;">{{ translations.hero.cta }}</a>
                {{/if}}
              </div>
            </div>
          </div>
        </section>

        <!-- Demo Section -->
        <section id="demo" class="section py-5 bg-light">
          <div class="container mx-auto">
            <div class="row align-items-center">
              <div class="col-md-6 order-md-2">
            <img src="/img/demo-swap2.webp" alt="{{ translations.demo.imageAlt }}" class="img-fluid">
              </div>
              <div class="col-md-6 order-md-1">
            <h2>{{ translations.demo.heading }}</h2>
            <p>{{ translations.demo.description }}</p>
              </div>
            </div>
          </div>
        </section>

        <!-- How It Works Section -->
        <section id="how-it-works" class="section py-5">
          <div class="container mx-auto">
            <div class="row align-items-center">
              <div class="col-md-6">
            <img src="/img/demo-swap3.gif" alt="{{ translations.howItWorks.heading }}" class="img-fluid">
              </div>
              <div class="col-md-6">
            <h2>{{ translations.howItWorks.heading }}</h2>
            <p>{{ translations.howItWorks.step1.description }}</p>
              </div>
            </div>
          </div>
        </section>

        <!-- Benefits Section -->
        <section id="benefits" class="section" style="padding: 80px 20px; max-width: 1200px; margin: 0 auto 60px auto;">
          <h2 style="text-align: center; margin-bottom: 50px; font-size: 2.5em; color: #333;">{{ translations.benefits.heading }}</h2>
          <div class="row" >
            <div class="col-12 col-sm-6 mx-0" data-animate="animate__bounceIn" style="min-width: 250px; margin: 0 15px 40px 15px; text-align: center;">
              <div style="font-size: 3em; margin-bottom: 20px; color: #007bff;">🎥</div>
              <h3 style="font-size: 1.5em; margin-bottom: 15px; color: #333;">{{ translations.benefits.seamless.title }}</h3>
              <p style="text-align: justify;font-size: 1.1em; line-height: 1.6; color: #555;">{{ translations.benefits.seamless.description }}</p>
            </div>
            
            <div  class="col-12 col-sm-6 mx-0" data-animate="animate__bounceIn" data-delay="delay-100ms" style="min-width: 250px; margin: 0 15px 40px 15px; text-align: center;">
              <div style="font-size: 3em; margin-bottom: 20px; color: #007bff;">🔒</div>
              <h3 style="font-size: 1.5em; margin-bottom: 15px; color: #333;">{{ translations.benefits.secure.title }}</h3>
              <p style="text-align: justify;font-size: 1.1em; line-height: 1.6; color: #555;">{{ translations.benefits.secure.description }}</p>
            </div>
            
            <div  class="col-12 col-sm-6 mx-0" data-animate="animate__bounceIn" data-delay="delay-200ms" style="min-width: 250px; margin: 0 15px 40px 15px; text-align: center;">
              <div style="font-size: 3em; margin-bottom: 20px; color: #007bff;">⚡</div>
              <h3 style="font-size: 1.5em; margin-bottom: 15px; color: #333;">{{ translations.benefits.fast.title }}</h3>
              <p style="text-align: justify;font-size: 1.1em; line-height: 1.6; color: #555;">{{ translations.benefits.fast.description }}</p>
            </div>
            
            <div  class="col-12 col-sm-6 mx-0" data-animate="animate__bounceIn" data-delay="delay-300ms" style="min-width: 250px; margin: 0 15px 40px 15px; text-align: center;">
              <div style="font-size: 3em; margin-bottom: 20px; color: #007bff;">✨</div>
              <h3 style="font-size: 1.5em; margin-bottom: 15px; color: #333;">{{ translations.benefits.quality.title }}</h3>
              <p style="text-align: justify;font-size: 1.1em; line-height: 1.6; color: #555;">{{ translations.benefits.quality.description }}</p>
            </div>
          </div>
        </section>

        <!-- Dynamic Pricing Section -->
        <section id="pricing" class="section" style="padding: 80px 20px; max-width: 1200px; margin: 0 auto 60px auto;">
          <h2 style="text-align: center; margin-bottom: 50px; font-size: 2.5em; color: #333;">{{ translations.dynamicPricing.heading }}</h2>
          <p style="text-align: center; margin-bottom: 50px; font-size: 1.2em; color: #666; max-width: 700px; margin-left: auto; margin-right: auto;">{{ translations.dynamicPricing.description }}</p>
          <p style="text-align: center; margin-bottom: 50px; font-size: 1.2em; color: #666; max-width: 700px; margin-left: auto; margin-right: auto;">{{ translations.dynamicPricing.reassurance }}</p>
          
            <!-- CTA Button -->
            <div style="text-align: center;">
              <a href="#top" class="btn btn-success btn-lg cta" style="padding: 12px 30px; font-size: 1.2em; border-radius: 30px;">{{ translations.dynamicPricing.ctaButton }}</a>
            </div>
        </section>

        <!-- FAQ Section -->
        <section id="faq" class="section" style="padding: 80px 20px; max-width: 1200px; margin: 0 auto 60px auto;">
          <h2 style="text-align: center; margin-bottom: 50px; font-size: 2.5em; color: #333;">{{ translations.faq.heading }}</h2>
          
          <div class="accordion" id="faqAccordion" style="max-width: 800px; margin: 0 auto;">
            <div class="accordion-item" data-animate="animate__fadeIn" style="margin-bottom: 15px; border: 1px solid #dee2e6; border-radius: 10px; overflow: hidden;">
              <h3 class="accordion-header" id="headingOne">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                  {{ translations.faq.q1.question }}
                </button>
              </h3>
              <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#faqAccordion">
                <div class="accordion-body" style="padding: 20px; font-size: 1.1em; line-height: 1.6; color: #555;">
                  {{ translations.faq.q1.answer }}
                </div>
              </div>
            </div>
            
            <div class="accordion-item" data-animate="animate__fadeIn" data-delay="delay-100ms" style="margin-bottom: 15px; border: 1px solid #dee2e6; border-radius: 10px; overflow: hidden;">
              <h3 class="accordion-header" id="headingTwo">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                  {{ translations.faq.q2.question }}
                </button>
              </h3>
              <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#faqAccordion">
                <div class="accordion-body" style="padding: 20px; font-size: 1.1em; line-height: 1.6; color: #555;">
                  {{ translations.faq.q2.answer }}
                </div>
              </div>
            </div>
            
            <div class="accordion-item" data-animate="animate__fadeIn" data-delay="delay-200ms" style="margin-bottom: 15px; border: 1px solid #dee2e6; border-radius: 10px; overflow: hidden;">
              <h3 class="accordion-header" id="headingThree">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                  {{ translations.faq.q3.question }}
                </button>
              </h3>
              <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#faqAccordion">
                <div class="accordion-body" style="padding: 20px; font-size: 1.1em; line-height: 1.6; color: #555;">
                  {{ translations.faq.q3.answer }}
                </div>
              </div>
            </div>
            
            <div class="accordion-item" data-animate="animate__fadeIn" data-delay="delay-300ms" style="margin-bottom: 15px; border: 1px solid #dee2e6; border-radius: 10px; overflow: hidden;">
              <h3 class="accordion-header" id="headingFour">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                  {{ translations.faq.q4.question }}
                </button>
              </h3>
              <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#faqAccordion">
                <div class="accordion-body" style="padding: 20px; font-size: 1.1em; line-height: 1.6; color: #555;">
                  {{ translations.faq.q4.answer }}
                </div>
              </div>
            </div>
            
            <div class="accordion-item" data-animate="animate__fadeIn" data-delay="delay-400ms" style="margin-bottom: 15px; border: 1px solid #dee2e6; border-radius: 10px; overflow: hidden;">
              <h3 class="accordion-header" id="headingFive">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                  {{ translations.faq.q5.question }}
                </button>
              </h3>
              <div id="collapseFive" class="accordion-collapse collapse" aria-labelledby="headingFive" data-bs-parent="#faqAccordion">
                <div class="accordion-body" style="padding: 20px; font-size: 1.1em; line-height: 1.6; color: #555;">
                  {{ translations.faq.q5.answer }}
                </div>
              </div>
            </div>
          </div>
          
          
        </section>
        
        <!-- CTA Footer Section -->
        <section id="footer-cta" class="section" style="position: relative; padding: 100px 20px; text-align: center; margin-bottom: 60px;background-color: rgb(90 111 236/var(--tw-bg-opacity,1));">
          <div style="background: rgba(255,255,255,0.9); padding: 50px 20px; max-width: 800px; margin: 0 auto; border-radius: 10px; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
            <h2 data-animate="animate__fadeInDown" style="font-size: 2.5em; margin-bottom: 20px; color: #333;">{{ translations.footer.ctaHeading }}</h2>
            <p data-animate="animate__fadeInDown" data-delay="delay-100ms" style="font-size: 1.2em; margin-bottom: 30px; color: #666; max-width: 600px; margin-left: auto; margin-right: auto;">{{ translations.footer.ctaMessage }}</p>
            <a href="#top" class="btn btn-primary btn-lg cta" data-animate="animate__zoomIn" data-delay="delay-200ms" style="padding: 12px 30px; font-size: 1.2em; border-radius: 30px;">{{ translations.footer.ctaButton }}</a>
          </div>
        </section>
      </div>
    </div>
    {{> footer translations=translations}}
  </body>
</html>
