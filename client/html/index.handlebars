<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{{ translations.title }}</title>

    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/css/normalize.css" />
    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://js.stripe.com/v3/"></script>
    <script>const translations = `{{{json translations}}}`;</script> 
    <script src="/index.js" defer></script>
  </head>

  <body>
    {{> header translations=translations}}
    <div class="sr-root">
      <div class="main" style="width: 100%;">
        <section class="main-container" style="background-color: white; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
          <div>
            <h1 id="title" style="padding-top: 50px;">{{ translations.title }}</h1>
            <h4 id="subtitle" class="subtitle">{{ translations.subtitle }}</h4>
          </div>

          <div class="upload-container">
            <div class="upload-section">
              <h4 id="instruction_video" class="instruction">{{ translations.instruction_video }}</h4>
              <div id="videoDropZone" class="drop-zone">
                <input
                  type="file"
                  id="videoInput"
                  name="video_file"
                  accept="video/*"
                  style="display: none"
                />
                <button id="videoUploadBtn" class="upload-btn">
                  <span>{{ translations.upload_video }}</span>
                </button>
              </div>
              <p id="drop_video" class="drop-text">{{ translations.drop_video }}</p>
              <video id="videoPreview" width="100%" controls style="display: none;"></video>
              <div id="videoDetails" class="video-details"></div>
            </div>

            <div class="upload-section">
              <h4 id="instruction_image" class="instruction">{{ translations.instruction_image }}</h4>
              <div id="imageDropZone" class="drop-zone">
                <input
                  type="file"
                  id="imageInput"
                  name="face_image_file"
                  accept="image/*"
                  style="display: none"
                />
                <button id="imageUploadBtn" class="upload-btn">
                  <span>{{ translations.upload_photo }}</span>
                </button>
              </div>
              <p id="drop_photo" class="drop-text">{{ translations.drop_photo }}</p>
              <img id="imagePreview" src="#" alt="Image preview" style="max-width: 100%; height: auto; display: none;">
                <div id="imageDetails" class="image-details"></div>
            </div>
          </div>

          <div class="payment-section"style="max-width: 80%; padding-bottom: 50px; margin: 50px auto 0 auto;">
            <input type="checkbox" id="skipPayment" name="skipPayment" checked />
            <label for="skipPayment"><span>{{ translations.skip_payment }}</span></label>
            <button id="payButton" class="proceed-btn"><span>{{ translations.proceed }}</span></button>
          </div>

          <script>
            if (window.location.hostname !== 'localhost') {
              document.getElementById('skipPayment').style.display = 'none';
              document.querySelector('label[for="skipPayment"]').style.display = 'none';
            }
          </script>

          <div id="status" class="status"></div>
        </section>

        <section style=" margin: 40px auto; padding: 20px; text-align: center;">
          <h1 id="ai_video_face_swap" style="font-size: 2em; font-weight: bold; color: #333;">{{ translations.ai_video_face_swap }}</h1>
          <p id="video_face_swap_description" style="font-size: 1.1em; color: #666; margin-bottom: 40px;">{{ translations.video_face_swap_description }}</p>

          <div class="columns" style="display: flex; justify-content: space-between;">
            <div style="width: 45%; padding: 10px;">
              <h2 id="how_to_use" style="font-size: 1.5em; color: #333;">{{ translations.how_to_use }}</h2>
              <ol style="list-style: decimal inside; color: #666; text-align: left;">
                <li id="step1">{{ translations.step1 }}</li>
                <li id="step2">{{ translations.step2 }}</li>
                <li id="step3">{{ translations.step3 }}</li>
                <li id="step4">{{ translations.step4 }}</li>
              </ol>
            </div>

            <div style="width: 45%; padding: 10px;">
              <h2 id="why_choose" style="font-size: 1.5em; color: #333;">{{ translations.why_choose }}</h2>
              <ol style="list-style: decimal inside; color: #666; text-align: left;">
                <li id="reason1">{{ translations.reason1 }}</li>
                <li id="reason2">{{ translations.reason2 }}</li>
                <li id="reason3">{{ translations.reason3 }}</li>
                <li id="reason4">{{ translations.reason4 }}</li>
              </ol>
            </div>
          </div>

          <div class="features" style="display: flex; justify-content: space-around; margin-top: 40px;">
            <div style="width: 30%; text-align: center;">
              <span style="font-size: 2em; margin-bottom: 10px;">ðŸŽ¥</span>
              <p id="seamless_face_swapping" style="font-size: 1em; color: #666;">{{ translations.seamless_face_swapping }}</p>
            </div>

            <div style="width: 30%; text-align: center;">
              <span style="font-size: 2em; margin-bottom: 10px;">ðŸ”’</span>
              <p id="secure_payments" style="font-size: 1em; color: #666;">{{ translations.secure_payments }}</p>
            </div>

            <div style="width: 30%; text-align: center;">
              <span style="font-size: 2em; margin-bottom: 10px;">âš¡</span>
              <p id="fast_processing" style="font-size: 1em; color: #666;">{{ translations.fast_processing }}</p>
            </div>
          </div>
        </section>

        <section id="demo" style="margin: 40px auto; padding: 20px; text-align: center;">
          <h1 style="font-size: 2em; font-weight: bold; color: #333;">{{ translations.demo_heading }}</h1>
          <p style="font-size: 1.1em; color: #666; margin-bottom: 40px;">{{ translations.demo_description }}</p>
          <!-- Placeholder for demo content -->
          <p style="color: #666;">{{ translations.demo_placeholder }}</p>
        </section>

        <section id="benefits" style="margin: 40px auto; padding: 20px; text-align: center;">
          <h1 style="font-size: 2em; font-weight: bold; color: #333;">{{ translations.benefits_heading }}</h1>
          <div style="display: flex; justify-content: space-around; margin-top: 20px;">
            <div style="width: 30%; text-align: center;">
              <p style="font-size: 1em; color: #666;">{{ translations.benefit1 }}</p>
            </div>
            <div style="width: 30%; text-align: center;">
              <p style="font-size: 1em; color: #666;">{{ translations.benefit2 }}</p>
            </div>
            <div style="width: 30%; text-align: center;">
              <p style="font-size: 1em; color: #666;">{{ translations.benefit3 }}</p>
            </div>
          </div>
        </section>

        <section id="pricing" style="margin: 40px auto; padding: 20px; text-align: center;">
          <h1 style="font-size: 2em; font-weight: bold; color: #333;">{{ translations.pricing_heading }}</h1>
          <p style="font-size: 1.1em; color: #666; margin-bottom: 40px;">{{ translations.pricing_description }}</p>
          <div style="font-size: 1em; color: #666;">{{ translations.pricing_details }}</div>
        </section>

        <section id="faq" style="margin: 40px auto; padding: 20px; text-align: center;">
          <h1 style="font-size: 2em; font-weight: bold; color: #333;">{{ translations.faq_heading }}</h1>
          <div style="text-align: left; max-width: 600px; margin: 0 auto;">
            <h3 style="color: #333;">{{ translations.faq_question1 }}</h3>
            <p style="color: #666;">{{ translations.faq_answer1 }}</p>
            <h3 style="color: #333;">{{ translations.faq_question2 }}</h3>
            <p style="color: #666;">{{ translations.faq_answer2 }}</p>
            <h3 style="color: #333;">{{ translations.faq_question3 }}</h3>
            <p style="color: #666;">{{ translations.faq_answer3 }}</p>
          </div>
        </section>
      </div>
    </div>
    {{> footer translations=translations}}
  </body>
</html>
