    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://js.stripe.com/v3/"></script>
    <script>const translations = `{{{json translations}}}`;</script> 
    <script src="/index.js" defer></script>
